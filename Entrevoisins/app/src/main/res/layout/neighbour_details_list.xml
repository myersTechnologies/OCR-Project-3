<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_adress"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_place_rose_24dp"/>

    <TextView
        android:id="@+id/neighbour_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_adress"
        app:layout_constraintStart_toEndOf="@+id/item_adress"
        app:layout_constraintTop_toTopOf="@+id/item_adress"
        />

    <ImageView
        android:id="@+id/item_contact"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/item_adress"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_local_phone_black_24dp"/>

    <TextView
        android:id="@+id/neighbour_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_contact"
        app:layout_constraintStart_toEndOf="@+id/item_contact"
        app:layout_constraintTop_toTopOf="@+id/item_contact"
        />

    <ImageView
        android:id="@+id/item_site"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/item_contact"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_language_rose_24dp"/>

    <TextView
        android:id="@+id/neighbour_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_site"
        app:layout_constraintStart_toEndOf="@+id/item_site"
        app:layout_constraintTop_toTopOf="@+id/item_site"
        />

</android.support.constraint.ConstraintLayout>